doctype 5
html(lang='en')
  head
    link(href='/stylesheets/reset.css', rel='stylesheet', type='text/css')
    link(href='/stylesheets/style.css', rel='stylesheet', type='text/css')
    
    title Furry Archer
    
    script(type='text/javascript', src='/libs/crafty-src.js')
    //script(type='text/javascript', src='/libs/crafty-diamond-iso.js')
    script(type='text/javascript', src='/libs/jquery-1.9.1.js')
    script(type='text/javascript', src='/libs/jquery.easing.1.3.js')
    script(type='text/javascript', src='/socket.io/socket.io.js')

  body
    - if (locals.flash)
      .flash_container
        each message, type in locals.flash
          .flash(class=type)= message

    div#panel-control
      p#section-title Informations
      div#infos

      p#section-title Actions
      div#actions

      p#section-title Weapons
      div#weapons

      p#section-title Weather
      div#weather

      p#section-title DEBUG
      p#debug

    form#game_chat_form
      div#game_chat
        p#header #{locals.user.username} - Online Chat - 
          a.logout.buttoned(href="/game/logout") logout
                
        div#conversation
          p#message_template.hidden
            span.author
            span.message

        p#new_message
          input(type='text', value='message de bob', name='message', id='message')
    
    script(type='text/javascript', src='/javascripts/helpers.js')
    script(type='text/javascript', src='/javascripts/_sprites.js')
    script(type='text/javascript', src='/javascripts/_map.js')
    script(type='text/javascript', src='/javascripts/_components.js')
    script(type='text/javascript', src='/javascripts/game_logic.js')
    script(type='text/javascript', src='/javascripts/game_chat.js')
    script(type='text/javascript', src='/javascripts/application.js')
